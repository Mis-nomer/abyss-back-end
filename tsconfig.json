{
  "compilerOptions": {
    // Language feats
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "target": "ES6",
    "module": "ES2020",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,

    // Type checking
    "noImplicitAny": false,
    "strict": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,

    // Output control
    "removeComments": true,
    "outDir": "./build",
    "preserveConstEnums": true,
    "sourceMap": false,

    // Misc
    "forceConsistentCasingInFileNames": true,
    "rootDir": ".",
    "resolveJsonModule": true,

    // Import
    "baseUrl": ".",
    "paths": {
      "@common/*": ["src/common/*"],
      "@libs/*": ["src/libs/*"],
      "@models/*": ["src/models/*"],
      "@plugins/*": ["src/plugins/*"],
      "@routes/*": ["src/routes/*"],
      "@services/*": ["src/services/*"],
      "@schemas/*": ["src/schemas/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
