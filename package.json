{
  "name": "abyss-back-end",
  "version": "0.0.2",
  "description": "A privacy-first messaging application",
  "main": "src/server.ts",
  "scripts": {
    "prepare": "husky || true",
    "dev": "bun --watch src/server.ts",
    "prod": "bun --env-file=.env.production build src/server.ts --target=bun --outdir dist --minify",
    "start": "bun dist/server.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@elysiajs/cors": "^1.0.2",
    "@elysiajs/cron": "^1.0.3",
    "@elysiajs/eden": "^1.0.8",
    "elysia": "^1.0.10",
    "elysia-autoroutes": "^0.5.0",
    "mongoose": "^8.2.4",
    "redis": "^4.6.13",
    "remeda": "^1.57.1",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/node": "^20.11.28",
    "chalk": "^5.3.0",
    "eslint": "^8.57.0",
    "eslint-config-love": "^43.1.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.2"
  },
  "lint-staged": {
    "*.ts": [
      "prettier — config .prettierrc 'src/**/*.ts' — write",
      "eslint . — ext .ts — fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
